#!/bin/bash

trap "setterm --cursor on; printf '\033[2J\033[H'; exit; trap -- - SIGINT SIGTERM SIGHUP EXIT" \
    SIGTERM SIGINT SIGHUP EXIT

declare -i TIMER
declare MINUTE_FORMAT
declare BANNER_TEXT

while [[ -n $1 && $1 =~ ^- && ! $1 == '--' ]]; do
    case $1 in
        -b|--banner)
            { [[ -n $2 && ! $2 =~ ^- ]] && shift && BANNER_TEXT=$1; } || {
                printf >&2 "Bad/missing argument to -b/--banner.\n"
                exit 1
            }
            shift;
            ;;
        -t|--timer)
            { [[ -n $2 && ! $2 =~ ^- ]] && shift && TIMER=$1; } || {
                printf >&2 "Bad/missing argument to -t/--timer.\n"
                exit 1
            }
            shift;
            ;;
        -*)
            printf "Unknown option: %s\n" "$1"
            exit 1
            ;;
        *)
            printf "Unknown non-option argument: %s\n" "$1"
            exit 1
            ;;
    esac
done

[[ $1 == '--' ]] && shift

[[ -z "${TIMER:=${*}}" ]] && read -r -p "Set Timer: " TIMER

_has_deps(){
    type figlet lolcat >/dev/null 2>&1 && return 0
    return 1
}

_minutize(){
    local total="${TIMER}"
    local -i minutes
    local -i seconds
    minutes=$(( total / 60 ))
    seconds=$(( total % 60 ))
    # MINUTE_FORMAT=$(printf "%d : %02d\n" "$minutes" "$seconds")
    printf -v MINUTE_FORMAT "%d : %02d\n" "$minutes" "$seconds"
}


printf '\033[2J' # clear

if _has_deps; then
    while [[ $TIMER -ge 0 ]]; do
        printf '\033[2J\033[H' # clear/top
        _minutize "$TIMER"
        printf "%s\n%s\n" "$BANNER_TEXT" "$MINUTE_FORMAT" | figlet | lolcat; 
        setterm --cursor off
        (( TIMER-- ));
        sleep 1;
    done
else
    while [[ $TIMER -ge 0 ]]; do
        printf '\033[2J\033[H' # clear/top
        _minutize "$TIMER"
        printf "%s\n%s\n" "$BANNER_TEXT" "$MINUTE_FORMAT"
        setterm --cursor off
        (( TIMER-- ));
        sleep 1;
    done
fi

printf '\033[2J\033[H'
{ _has_deps && printf "Timer Complete!\n" | figlet | lolcat; } ||
    printf "Timer complete!\n"
sleep 2;
exit 0
