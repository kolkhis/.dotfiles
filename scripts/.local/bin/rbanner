#!/usr/bin/env bash

clear=$'\033[2J'
top=$'\033[H'

trap "setterm --cursor on; clear; exit; trap -- - SIGINT SIGTERM" SIGTERM SIGINT

[[ -z "${text:=${*}}" ]] && read -r -p "Text: " text

echo "${clear}"
while :; do
    echo "${top}"
    if which figlet > /dev/null 2>&1; then
        { which lolcat >/dev/null && figlet "${text}" | lolcat; } || figlet "${text}"
    else
        { which lolcat >/dev/null && echo "${text}" | lolcat; } || echo "${text}"
    fi
    setterm --cursor off
    sleep 2
done

